#: original/txt/usr_41.txt:1983
#, no-wrap
msgid ""
"7\n"
"  8\tMappings:\n"
"  9\t<Leader>a   or   <Plug>TypecorrAdd\n"
" 10\t\tAdd a correction for the word under the cursor."
msgstr ""
"7\n"
"  8\tMacros:\n"
"  9\t<Leader>a   o   <Plug>CorreccortAñadir\n"
" 10\t\tAñade una corrección para la palabra bajo el cursor."

#. type: Plain text
#: original/txt/usr_41.txt:1983
#, no-wrap
msgid ""
"11\n"
" 12\tCommands:\n"
" 13\t:Correct {word}\n"
" 14\t\tAdd a correction for {word}."
