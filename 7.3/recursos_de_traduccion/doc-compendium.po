msgstr ":{range}center [width]"

#. type: Plain text
#: original/TXT/usr_25.txt:143
#, no-wrap
msgid "{range} is the usual command-line range."
msgstr "{range} (rango) is el valor de rango normal en la línea de órdenes."

#. type: Plain text
#: original/TXT/usr_25.txt:143
#, no-wrap
msgid ""
"[width] is an optional line width to\n"
"use for centering."
msgstr ""
"[width]\n"
